
.list-item{
    width: 90%;
    margin: 10px auto;
    height: auto;
    position: relative;
    overflow: hidden;
    padding-bottom: 5px;
    border-bottom: 2px solid rgba(0, 0, 0, 0.2);
}
.list-item .h{
    width: 100%;
    height: 30px;
}
.list-item .h .author{
    float: left;
    height: 25px;
    line-height: 25px;
    font-size: 16px;
    font-family: "微软雅黑";
}
.list-item .h .img{
    float: left;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    margin-right: 15px;
}
.context{
    font-size: 15px;
    min-height: 48px;
    line-height: 24px;
    overflow: hidden;
    font-family: "微软雅黑";
}
