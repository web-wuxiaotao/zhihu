.bg{
    height: 400rpx;
    width: 100%;
}




.editors{
    width: 100%;
    height: 120rpx;
    box-sizing: border-box;
    line-height: 80rpx;
    color: #999999;
    font-size: 16px;
    padding: 20rpx 40rpx;
}
.editors .editor{
    float: left;
    margin-right: 20rpx;
}
.editors .pic{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    box-shadow: 0 0 2px rgba(0,0,0,0.5);
    float: left;
    margin: 0 10rpx;
    overflow: hidden;
}
.editors .pic .avatar{
    width: 80rpx;
    height: 80rpx;
}




.newsLists .list{
    height: 160rpx;
    width: 96%;
    margin: 0 auto;
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
    position: relative;
    margin-bottom: 20rpx;
    border-radius: 15rpx;
}
.newsLists .list .list-title{
    width: 70%;
    height: 120rpx;
    line-height: 60rpx;
    overflow: hidden;
    font-size: 16px;
    font-family: "pingfang";
    position: absolute;
    top: 10rpx;
    left: 10rpx;
}
.newsLists .list .list-img{
    width: 140rpx;
    height: 140rpx;
    background-size: cover;
    position: absolute;
    top: 0;
    bottom: 0;
    right: 10rpx;
    margin: auto;
}
.newsLists .list .list-hours{
    height: 40rpx;
    position: absolute;
    bottom: 0;
    left: 10rpc;
    line-height: 40rpx;
    color: #ccc;
    font-size: 12rpx
}